  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "name": "React App",
      "request": "launch",
      "runtimeArgs": ["run", "dev"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "NextJS App",
      "request": "launch",
      "runtimeArgs": ["run", "dev"],
      "runtimeExecutable": "npm",
      "skipFiles": ["<node_internals>/**"],
      "type": "node"
    },
    {
      "name": "Django Backend",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/manage.py",
      "args": ["runserver", "127.0.0.1:7777"],
      "console": "internalConsole",
      "django": true,
      "justMyCode": true,
      "env": {
        "DJANGO_SETTINGS_MODULE": "toolname.settings.settings_debug"
      }
    },
    {
      "name": "Worker",
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "poetry",
      "args": [
        "run",
        "celery",
        "-A",
        "toolname",
        "worker",
        "-Ofair",
        "-Psolo",
        "--concurrency=1",
        "--loglevel=DEBUG",
        "--hostname=worker@%h",
        "--pidfile=${workspaceFolder}/_local/worker.pid"
      ],
      "console": "internalConsole",
      "env": {
        "DJANGO_SETTINGS_MODULE": "toolname.settings.settings_debug"
      }
    }
  ]
}
